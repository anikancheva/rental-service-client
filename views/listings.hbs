<div class="listings">
    <div class="sidebar">
        <p>What are you looking for?</p>
        <a href="/listings/car">Cars</a>
        <a href="/listings/truck">Trucks</a>
        <a href="/listings/motorbike">Motorbikes</a>
        <a href="/listings/rv">RVs</a>
        <a href="/listings/boat">Boats</a>
        <a href="/listings/exotic">Exotic</a>
    </div>
    {{#if listings}}
    <div class="list">
    <ul>
        {{#each listings}}
        <li class="list-item">
            <img src="{{imageUrl}}" alt="vehicle image" width="200px">
            <p>{{brand}} {{model}}</p>
            <p>${{price}}/day</p>
            <a href="/listings/details/{{id}}">Details</a>
        </li>
        {{/each}}
    </ul></div>
    {{else}}
    <div>
        {{>details}}
    </div>
    {{/if}}
</div>
<script src="../static/js/listings.js"></script>